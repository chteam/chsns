<form>
<div id="toc">
	<ul id="tabs">
		<li id="tabSearchUser"><a href="#">查找同学</a></li>
		<li id="tabSearchGroup"><a href="#">查找群</a></li>
		<li id="tabSearchClass"><a href="#">查询班级</a></li>
		<li id="tabResult"><a href="#">查询结果</a></li>
		<li class="status">查找结果<span id="ResultCount">0</span></li>
	</ul>
</div>
<div  id="chcontent">
	<div id="chcontent_body">
		<div id="chSearchUser" style="display: none; visibility: hidden;">
		<fieldset>
		<legend>基本搜索</legend>
		    <ul>
				<li>
					<label>姓名：</label>
					<input class="inputtext" id="name" name="name" tabindex="1" type="text" />
				</li>

				<li>
					<label>
						大学：</label>
					<input class="inputtext" id="university" tabindex="4" type="text" />
				</li>

			</ul>
		</fieldset>
		<fieldset>
		<legend>精确查找</legend>
		<ul>
			<li>
			<label>帐号：</label>
			<input class="inputtext" id="userid" name="userid" tabindex="2" type="text" />
			</li>
			<li>
			<label>email：</label>
			<input class="inputtext" id="email" name="email" tabindex="3" type="text" />
			</li>
		</ul>
		</fieldset>
			<input tabindex="5" class="subbutton" value="搜索" onclick="searchUser();" type="button" />
			<input tabindex="6" class="subbutton" value="返回" onclick="ButtonBack();" type="button" />
		</div>
		<div id="chSearchGroup" style="display: none; visibility: hidden;">
		<fieldset>
		<legend>基本查找</legend>
			<ul>
				<li>
					<label>
						关键字：</label>
					<input class="inputtext" tabindex="1" id="groupname" type="text" />
				</li>
			</ul>		
		</fieldset>
#*		<fieldset>
		<legend>分类查找</legend>
		    <ul>
		        <li>
		        <label>关键字：</label>
			    <input class="inputtext" tabindex="1" id="Text1" type="text" />
		        </li>
		        <li>
		        <label>班级查找：</label>
		        <select id="University" onchange=""><option>大学</option><option>院系</option></select>
		        </li>
		    </ul>
		</fieldset>*#
		<input tabindex="2" class="subbutton" value="按名称搜索群" id="s_gup" onclick="SearchGroup();" type="button" />
		</div>
		<div id="chSearchClass" style="display:none;visibility:hidden;">
#if ($tabs == 2)
#component(TemplateOnly with "template=searchclass")
#end
		</div>
		<div id="chResult" style="display:none;visibility:hidden;">
			<div class="page" id="PageUp">
			</div>
			<ul id="ResultItems">$ResultItems</ul>
			<div class="page" id="PageDown">
			</div>
			<input id="HdPage" type="hidden" value="1" />
			<input id="HdCount" type="hidden" value="$Count" />
			<input id="HdEveryPage" type="hidden" value="10" />
			<input id="HdShow" type="hidden" value="0" />
			#*这个值0是用户1是群*#
		</div>
	</div>
</div>
</form>
<script type="text/javascript" src="/Javascript/Search.js"></script>
<script type="text/javascript">
InitTabP("SearchUser");
InitTabP("SearchGroup");
InitTabP("SearchClass");
InitTabP("Result");
InitTabC($Tabs);
InitEditW("name","任意输入一项即可搜索");
InitEditW("university","任意输入一项即可搜索");
InitEditW("userid","任意输入一项即可搜索");
InitEditW("email","任意输入一项即可搜索");
InitEditW("groupname","任意输入一项即可搜索");
Sys.Application.add_init(function() {
	if(Tabs()){
		if(Tabs().get_activeTabIndex()==3)
			PageSet_chSetPage("PageUp","PageDown","HdPage","HdCount","HdEveryPage");
		if(get_Viewerid()==0){
			hideLayer("tabSearchGroup");
			if(Tabs().get_activeTabIndex()==3)
			hideLayer("tabSearchUser");
		}
	}
});
hideLayer('tabResult');
</script>