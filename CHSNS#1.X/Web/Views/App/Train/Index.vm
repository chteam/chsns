#capturefor(title)列车查询#end
<style type="text/css">
.t1{ margin:10px;}
.t1 label { margin-right:10px;}
.tmargin{ padding:5px 0;}
.tmargin label{color:#3b5999; margin-left:10px;}
.tbox{ border:1px solid #ccc; padding:5px; margin:10px 0;}
.tsub{ width:80px; margin-top:5px; margin-bottom:20px;}
</style>
<script type="text/javascript">
var setfocustrue=function(i){
$(i).checked=true;
};
var vali=function(){
if($("ZZ").checked&&($v("Txt_FZ")==""||$v("Txt_DZ")=="")){
return false;
}
if($("CC").checked&&($v("Txt_CC")=="")){
return false;
}
if($("CZ").checked&&($v("Txt_CZ")=="")){
return false;
}
return true;
};
</script>
<form action="" method="post" >
<div class="t1">


<input type="radio" name="radio" id="ZZ" value="ZZ" checked="checked" />站站查询
<input type="radio" name="radio" id="CC" value="CC" />车次查询
<input type="radio" name="radio" id="CZ" value="CZ" />车站查询
