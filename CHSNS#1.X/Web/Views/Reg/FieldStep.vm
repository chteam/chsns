					<input type="text" id="Xueyuan_text" />
					<a href="javascript:changeXueyuanMethod();">返回列表模式</a>
					<span id="Xueyuan_textmsg" style="visibility: hidden">请填写您所在的学院</span>
				</span>
*#				
				</li>
		</ul>
	</fieldset>
<script type="text/javascript">
//$get("Province").value=15;
function pchange(){
		var selu=$("University");
		selu.options.length=0;
		var ind=$("Province").selectedIndex;
		Chsword.AutoSelect.UniversityList($get("Province")[ind].text,function(r){
			if($("Province").options[0].text=="请选择")
				$("Province").removeChild($get("Province").options[0]);
			var rows = r.rows;
			for (var rowIndex = 0; rowIndex < rows.length; ++ rowIndex) {
				selu.options.add(new Option(rows[rowIndex]["School"],rows[rowIndex]["id"]));
			}
			unichange();
		},onfail);
}
function unichange(){
		var selx=$("Xueyuan");
		selx.options.length=0;
		var ind=$("University").selectedIndex;
		Chsword.AutoSelect.XueyuanList($("University")[ind].text,function(r){
			if($("University").options[0].text=="请选择")
				$("University").removeChild($("University").options[0]);
				if(r==null)return;
			var rows = r.rows;
			if(rows==null)return;
			for (var rowIndex = 0; rowIndex < rows.length; ++ rowIndex) {
				selx.options.add(new Option(rows[rowIndex]["XueYuan"],rows[rowIndex]["id"]));
			}
		},onfail);
}
function changeXueyuanMethod(){
	if($("Xueyuan_select").style.display=="none"){
		showLayer("Xueyuan_select","inline");
		hideLayer("Xueyuan_input");
	}else{
			showLayer("Xueyuan_input","inline");
		hideLayer("Xueyuan_select");
	}
}
var IsRegValition=function(){
if(!(validate_empty("University")
		&&validate_empty("Xueyuan")
		)) return false;
		return true;
};
pchange();
</script>
