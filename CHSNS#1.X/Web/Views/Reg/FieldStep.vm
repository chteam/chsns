	<fieldset>
		<legend>大学信息</legend>
		<ul>
			<li>
				<label>
					学校地区：</label>
				<select id="Province" name="Province" tabindex="9" onchange="pchange();">
					$provinces.replace(">黑龙江<",' selected="selected">黑龙江<')
				</select>
			</li>
			<li>
				<label>
					大学：</label>
				<select id="University" name="FieldInformation.Field" tabindex="13" onchange="unichange();">
					<option value="">请选择</option>
				</select><span class="tip"> - 注意：此信息提交后将不能更改</span>
				<span id="Universitymsg" style="visibility: hidden">[请选择您所在的大学]</span>
			</li>
			<li>
				<label>
					学院：</label>
				<span id="Xueyuan_select">
					<select id="Xueyuan" name="FieldInformation.Minifield" tabindex="15">
						<option value="">请选择</option>
					</select><span class="tip"> - 注意：此信息提交后将不能更改</span>
					<!--a href="javascript:changeXueyuanMethod();">列表中没有,点此自行填写</a-->
					<span id="Xueyuanmsg" style="visibility: hidden">[请选择你所在的学院]</span>
				</span>
