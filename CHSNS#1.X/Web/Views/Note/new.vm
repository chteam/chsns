<input id="HdIsPush" type="hidden" value="false" />
<script type="text/javascript">
var f_toc=false;
var cache_toc;
function sets(id){//设置标签的转换
	if(!f_toc){
		f_toc=true;
		cache_toc=$("tabs").innerHTML;
	}else{
		$("tabs").innerHTML=cache_toc;
	}
	SetActiveText($("show"+id));
	$("HdIsPush").value=(id==1)?"true":"false";
	$("LogBookItems").innerHTML="<li>正在载入...</li>";
	PageMethods.GetNewLogBookItem(id,function(result){
		$("LogBookItems").innerHTML=result;
	},onfail);
}
sets(${type});
</script>
