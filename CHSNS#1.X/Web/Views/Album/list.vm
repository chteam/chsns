#capturefor(title) $albums.Ownername的相册 #end
#capturefor(css)
<link href="${ChHelper.ChSite.StylePath}/photo.css" rel="stylesheet" type="text/css" />
#end
#capturefor(javascript)
<script src="/JavaScript/Client/Common.js" type="text/javascript"></script>
<script src="/WebServices/Photos.asmx/js" type="text/javascript"></script>
<script src="/JavaScript/Client/Tabs.js" type="text/javascript"></script>
<script src="/JavaScript/PageSet.js" type="text/javascript"></script>
<script src="/JavaScript/Photos.js" type="text/javascript"></script>
#end
<form>
<div id="toc">
	<ul id="tabs">
		<li id="tabPhotos" class="inactivetab"><a href="#">$albums.Ownername的相册</a></li>
		<li id="tabSet" class="inactivetab"></li>
		#if($ChHelper.ChUser.Userid==$albums.Ownerid)
		<li id="Status" class="status"><a href="javascript:showCreate();">[新建相册]</a></li>
		#end
	</ul>
</div>
<div id="chcontent">
	<div id="chcontent_body" class="ch_content">
		<div id="chPhotos" style="display: none; visibility: hidden;">
	<div class="page" id="PageUp">
	</div>
	<ul id="Albumitem">
	#if($rows.count==0)
	    #if($ChHelper.ChUser.Userid==$albums.Ownerid)
<li class="notes">您还没有建立相册 , Show出你自己吧
<input type="button" onclick="showCreate();" value="Go-&gt;" class="subbutton" />
</li>
	    #else
<li class="notes">相册的主人还没有公开任何相册哦.</li>
	    #end
	#else
        #if($ChHelper.ChUser.Userid==$albums.Ownerid)
            #component(AlbumItem with "source=$rows" "isedit=true")
        #else
            #component(AlbumItem with "source=$rows" "isedit=false")
        #end
	#end
	</ul>
	<div class="page" id="PageDown">
	</div>
		</div>
		<div id="chSet" style="display: none; visibility: hidden;">
			<fieldset><legend id="fl_neworedit">新建相册</legend>
			<ul>
			<li>相册名称:<input id="f_pname" type="text" /><span id="msgf_pname"></span></li>
			<li>拍摄地点:<input id="f_plocal" type="text" /><span id="msgf_plocal"></span></li>
			<li>相册说明:<br /><textarea id="f_pdesc"></textarea><span id="msgf_pdesc"></span></li>
			<li>访问权限:
			#component(ShowLevel with "id=f_pshowlevel")
			<span id="msgf_pshowlevel"></span></li>
			<li>
			<input type="button" id="f_pok" value="确认提交" class="subbutton" />
			<input type="button" value="取消" class="subbutton" onclick="pCancle();" />
			</li>
			</ul>
			</fieldset>
		</div>
<div class="inputbox">
<input type="button" value="$albums.Ownername的页面" class="subbutton" onclick="location.href='/User.aspx?userid=$albums.Ownerid'" />
#if($ChHelper.ChUser.Userid==$albums.Ownerid)
<input type="button" value="新建相册" class="subbutton" onclick="showCreate();" />
#end
<input id="HdPage" type="hidden" value="1" />
<input id="HdCount" type="hidden" value="$albums.AlbumCount" />
<input id="HdEveryPage" type="hidden" value="6" />
<input id="HdOwnerid" type="hidden" value="$albums.Ownerid" />
<input id="HdAlbumid" type="hidden" value="0" />
</div>
</div></div>
</form>
<script type="text/javascript">
InitTabP("Photos");
InitTabP("Set");
InitTabC($Tabs,PhotosChangeTab);
setPhototab($Tabs);
</script>