#capturefor(title) 相册 #end
#capturefor(css)
<link href="${ChHelper.ChSite.StylePath}/photo.css" rel="stylesheet" type="text/css" />
#end
#capturefor(javascript)
<script src="/JavaScript/Client/Common.js" type="text/javascript"></script>
<script src="/WebServices/Photos.asmx/js" type="text/javascript"></script>
<script src="/JavaScript/Client/Tabs.js" type="text/javascript"></script>
<script src="/JavaScript/PageSet.js" type="text/javascript"></script>
<script src="/JavaScript/upload.js" type="text/javascript"></script>
<script src="/JavaScript/Photos.js" type="text/javascript"></script>
#end

#if(!$album)
<div class="notes">相册不存在</div>
#else
<form action="" >
<div class="albump">
    <div id="toc">
        <ul id="tabs">
            <li id="tabAlbum" class="inactivetab"><a href="#">相册 - $album.get_item("Albumname")</a></li>
            <li id="tabSee" class="inactivetab"></li>
#if($ChHelper.ChUser.Userid==$Ownerid)
            <li class="inactivetab"><a href="javascript:ShowUpload();">上传图片</a></li>
#end
            <li id="Status" class="status"></li>
        </ul>
    </div>
<div id="chcontent">
	<div id="chcontent_body" class="ch_content">
		<div id="chAlbum" style="display: none; visibility: hidden;">
			<div class="page" id="PageUp"></div>
			<div id="Photoitem"><ul>
#component(PhotoList with "albumid=$Albumid" "ownerid=$Ownerid")
</ul></div>
<div class="page" id="PageDown"></div>
</div>
<div id="chSee" style="display: none; visibility: hidden;">
</div>
</div>
</div>
<input id="HdPage" type="hidden" value="1" />
<input id="HdCount" type="hidden" value="$album.get_item("PhotoCount")" />
<input id="HdEveryPage" type="hidden" value="16" />
<input id="HdOwnerid" type="hidden" value="$Ownerid" />
<input id="HdAlbumid" type="hidden" value="$Albumid" />
<input type="button" id="f_pok" value="$album.get_item("Username")的相册列表" class="subbutton" onclick="window.location.href='/Photos.aspx?userid=$Ownerid';" />
<input type="button" value="$album.get_item("Username")的页面" class="subbutton" onclick="window.location.href='/User.aspx?userid=$Ownerid'" />

</div>
</form>
<script type="text/javascript">
function A11d(sender, e) {
	var i=Tabs().get_activeTabIndex();
	setTab(i);
}
InitTabP("Album");
InitTabP("See");
InitTabC($tabs);
setTab($tabs);
</script>
#end